<section class="section-container" id="_projects">
	<% projects.forEach((project) => { %>
		<div class="project-info-container">
			<div class="project-img-container">

				<div class="img-frame">
					<div class="project-links-container">
						<nav>
							<a href="<%= project.git %>" target="_blank"><i class="fab fa-github"></i></a>
						</nav>
						<nav>
							<a href="<%= project.link %>" target="_blank"><i class="fas fa-external-link-alt"></i></a>
						</nav>
					</div>
					<img src="<%= project.img %>" alt="<%= project.alt %>">
				</div>
			</div>

			<div class="project-text-container">
				<h1><%= project.name %></h1>
				<p><%= project.description %></p>
				<ul>
					<% project.features.forEach((feature) => { %>
						<li><%= feature %></li>
					<% }) %>
				</ul>
			</div>
			<div class="project-specs-container">
				<p>specs:</p>
				<ul>
					<% project.specs.forEach((spec) => { %>
						<li><%= spec %></li>
					<% }) %>
				</ul>
			</div>
		</div>
	<% }) %>
</section>
	